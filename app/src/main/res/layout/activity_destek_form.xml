<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_destek_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.okanaydin.innocampus.DestekFormActivity">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/destekFormGorsel"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/add_btn2"
            android:adjustViewBounds="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Title Goes Here"
            android:padding="15dp"
            android:gravity="center"
            android:id="@+id/destekFormTitle"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Post Desc. Goes Here"
            android:id="@+id/destekFormDesc"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/shape"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:hint="@string/adsoyad"
            android:padding="5dp"
            android:id="@+id/userName"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView2"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:padding="5dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:hint="@string/telefonNumara"
            android:id="@+id/userPhone"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView2"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/shape"
            android:padding="13dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:hint="YANIT VER:"
            android:id="@+id/userAnswer"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/textView2"/>


        <Button
            android:text="GÃ¶nder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:background="@drawable/btn"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:id="@+id/destekFormGonderBtn"
            />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/cardview_dark_background"
            android:textSize="20sp"
            android:id="@+id/cardID"
            android:layout_marginTop="30dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>




</LinearLayout>
